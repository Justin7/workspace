<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
		<Button android:id="@+id/bind_service"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:text="bind Service" />
		<Button android:id="@+id/unbind_service"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:text="unbind Service" />
	</LinearLayout>		
	
	<EditText android:id="@+id/input_value"
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" />
	<!--  	android:numeric="integer" -->
		
	<Button android:id="@+id/get_result"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:text="get Result" />		
	<TextView  android:id="@+id/output_value"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="0"  />	
	<TextView  android:id="@+id/callback_value"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="0"  />	    	
</LinearLayout>
